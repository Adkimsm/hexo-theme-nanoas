.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for(theme.avatar),style="width:127px;")
      h1(title="")
        a(href="/")= config.title
      
        .description
          p= config.description

  ul.social-links
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter)
          i.fa.fa-twitter
    if theme.instagram
      li
        a(href="http://instagram.com/" + theme.instagram)
          i.fa.fa-instagram
    if theme.rss
      li
        a(href= url_for(theme.rss))
          i.fa.fa-rss
    if theme.weibo
      li
        a(href="http://weibo.com/" + theme.weibo)
          i.fa.fa-weibo
    if theme.facebook
      li
        a(href="http://facebook.com/" + theme.facebook)
          i.fa.fa-facebook
    if theme.github
      li
        a(href="http://github.com/" + theme.github)
          i.fa.fa-github

  .footer
    - var nowYear = date(Date.now(), "YYYY")
    span Theme by 
    a(href="https://github.com/Ben02/hexo-theme-Anatole") NanoAs
    br
    span Powered by 
    a(href="https://hexo.io/zh-cn/") Hexo
    .by_farbox

    a(href="https://hexo.io/zh-cn/", target="_blank") &copy; #{nowYear}  #{config.author}. All rights reserved.